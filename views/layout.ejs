<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Tienda Online' %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <a href="/" class="logo">ðŸ›’ Tienda Online</a>
      
      <button class="mobile-menu-toggle" id="menuToggle">
        <span class="material-icons" id="menuIcon">menu</span>
      </button>
      
      <ul class="nav-links" id="navLinks">
        <% if (user) { %>
          <li><a href="/products">Productos</a></li>
          <li><a href="/cart">Carrito</a></li>
          <li><a href="/orders">Mis Compras</a></li>
          <% if (user.nivel === 'admin') { %>
            <li><a href="/products/create" class="btn-admin">Crear Producto</a></li>
          <% } %>
          <li><span class="user-info">ðŸ‘¤ <%= user.nombre %> (<%= user.nivel %>)</span></li>
          <li><a href="/logout" class="btn-logout">Salir</a></li>
        <% } else { %>
          <li><a href="/login">Iniciar SesiÃ³n</a></li>
          <li><a href="/register">Registrarse</a></li>
        <% } %>
      </ul>
    </div>
  </nav>
  
  <div class="mobile-menu-overlay" id="menuOverlay"></div>

  <main class="container">
    <%- body %>
  </main>

  <footer class="footer">
    <p>&copy; 2025 Tienda Online - Todos los derechos reservados</p>
  </footer>
  
  <script>
    (function() {
      const menuToggle = document.getElementById('menuToggle');
      const navLinks = document.getElementById('navLinks');
      const menuOverlay = document.getElementById('menuOverlay');
      const menuIcon = document.getElementById('menuIcon');
      
      function openMenu() {
        navLinks.classList.add('mobile-visible');
        menuOverlay.classList.add('active');
        menuIcon.textContent = 'close';
        document.body.style.overflow = 'hidden';
      }
      
      function closeMenu() {
        navLinks.classList.remove('mobile-visible');
        menuOverlay.classList.remove('active');
        menuIcon.textContent = 'menu';
        document.body.style.overflow = '';
      }
      
      function toggleMenu() {
        if (navLinks.classList.contains('mobile-visible')) {
          closeMenu();
        } else {
          openMenu();
        }
      }
      
      menuToggle.addEventListener('click', toggleMenu);
      menuOverlay.addEventListener('click', closeMenu);
      
      navLinks.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', closeMenu);
      });
      
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeMenu();
      });
      
      window.addEventListener('resize', function() {
        if (window.innerWidth > 768) closeMenu();
      });
    })();
  </script>
</body>
</html>
