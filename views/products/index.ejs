<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Productos - Tienda Online</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <a href="/" class="logo"><span class="material-icons">shopping_cart</span> Tienda Online</a>
      <ul class="nav-links">
        <li><a href="/products"><span class="material-icons">inventory_2</span> Productos</a></li>
        <li><a href="/cart"><span class="material-icons">shopping_bag</span> Carrito</a></li>
        <li><a href="/orders"><span class="material-icons">receipt_long</span> Mis Compras</a></li>
        <% if (user.nivel === 'admin') { %>
          <li><a href="/products/create" class="btn-admin"><span class="material-icons">add_circle</span> Crear Producto</a></li>
        <% } %>
        <li><span class="user-info"><span class="material-icons">account_circle</span> <%= user.nombre %> (<%= user.nivel %>)</span></li>
        <li><a href="/logout" class="btn-logout"><span class="material-icons">logout</span> Salir</a></li>
      </ul>
    </div>
  </nav>

  <main class="container">
    <h1 style="font-size: 1.75rem;"><span class="material-icons" style="font-size: 28px; vertical-align: middle;">inventory_2</span> Catálogo de Productos</h1>

    <% if (products.length === 0) { %>
      <div class="empty-state">
        <p><span class="material-icons" style="font-size: 48px; display: block; margin-bottom: 0.7rem; color: #666;">inventory</span>No hay productos disponibles</p>
        <% if (user.nivel === 'admin') { %>
          <a href="/products/create" class="btn btn-primary"><span class="material-icons">add_circle</span> Crear Primer Producto</a>
        <% } %>
      </div>
    <% } else { %>
      <div class="products-grid">
        <% products.forEach(product => { %>
          <div class="product-card">
            <img src="<%= product.imagen || 'https://via.placeholder.com/300x200?text=Sin+Imagen' %>" alt="<%= product.nombre %>" class="product-image">
            <div class="product-content">
              <div class="product-header">
                <h3><%= product.nombre %></h3>
                <span class="product-code">Código: <%= product.codigo %></span>
              </div>
              <p class="product-description"><%= product.descripcion || 'Sin descripción' %></p>
              <div class="product-footer">
                <span class="product-price">$<%= parseFloat(product.precio).toFixed(2) %></span>
                <div class="product-actions">
                  <a href="/products/<%= product.codigo %>" class="btn btn-secondary"><span class="material-icons">visibility</span> Ver Detalle</a>
                  <form action="/cart/add/<%= product.id %>" method="POST" style="display: inline;">
                    <input type="hidden" name="cantidad" value="1">
                    <button type="submit" class="btn btn-primary"><span class="material-icons">add_shopping_cart</span> Agregar</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>
</body>
</html>
